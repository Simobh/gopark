{
  "name": "gopark",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:static": "ng build --configuration static",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:gopark": "node dist/gopark/server/server.mjs",
    "deploy": "npm run build:static && powershell -Command \"if (Test-Path 'dist/gopark/browser/index.csr.html') { Copy-Item 'dist/gopark/browser/index.csr.html' 'dist/gopark/browser/index.html' -Force }\" && firebase deploy --only hosting"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.14",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.2.14",
    "@angular/compiler": "^20.2.14",
    "@angular/core": "^20.2.14",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.2.14",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.2.14",
    "@angular/platform-server": "^20.2.14",
    "@angular/router": "^20.2.14",
    "@angular/ssr": "^20.2.14",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.13.1",
    "express": "^5.1.0",
    "mapbox-gl": "^3.17.0",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.26.17",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.14",
    "@angular/cli": "^20.2.14",
    "@angular/compiler-cli": "^20.2.14",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
